@model CadeMeuMedico.Models.cidades
@{
    ViewBag.Title = "Adicionar";
}


@using (Html.BeginForm("Adicionar", "Cidades", FormMethod.Post, new { @class="form-horizontal"})) //Gera o formulario Html
{
    @Html.AntiForgeryToken() //Gera um token de segurança
    @Html.ValidationSummary(true) //Valida as mensagens de segurança
    
    <div class="editor-label"> <!--Cria um Label-->
        <label>Nome</label>
    </div>
    <div class="editor-field"> <!--Cria um campo-->
        @Html.TextBoxFor(model => model.Nome, new { @class="form-control"})
        @Html.ValidationMessageFor(model => model.Nome) <!--Valida os dados desse campo-->
    </div>
    <br />
    <p>
        <input type="submit" value="Adicionar" class="btn btn-primary"/>
    </p>
}
<div>
    @Html.ActionLink("Voltar para a lista de Cidades", "ListaCidades", null, new { @class="btn btn-success"})
</div>
@section script{
    <script>
        $("#menuCidades").addClass("active");
    </script>
}