@model CadeMeuMedico.Models.cidades
@{
    ViewBag.Title = "Editar";
}


@using (Html.BeginForm("Editar", "Cidades", FormMethod.Post, new { @class="form-horizontal"}))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    
    <div class="editor-field">
        @Html.HiddenFor(model => model.IDCidade)
        @Html.ValidationMessageFor(model => model.IDCidade)
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.Nome)
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(model => model.Nome, new { @class="form-control"})
        @Html.ValidationMessageFor(model => model.Nome)
    </div>
    <br />
    <p>
        <input type="submit" value="Salvar" class="btn btn-primary"/>
    </p>
}
<div>
    @Html.ActionLink("Voltar para a lista de Cidades", "ListaCidades", null, new { @class="btn btn-success"})
</div>
@section script{
    <script>
        $("#menuCidades").addClass("active");
    </script>
}