@model CadeMeuMedico.Models.especialidades
@{
    ViewBag.Title = "Adicionar";
}


@using (Html.BeginForm("Adicionar", "Especialidade", FormMethod.Post, new { @class="form-horizontal"}))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    
    <div class="editor-label">
        <label>Nome</label>
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(model => model.Nome, new { @class="form-control"})
        @Html.ValidationMessageFor(model => model.Nome)
    </div>
    <br />
    <input type="submit" value="Cadastrar" class="btn btn-primary"/>
}
<br />
<div>
    @Html.ActionLink("Voltar para a lista de Especialidades", "ListaEspecialidade", null, new { @class="btn btn-success"})
</div>
@section script{
    <script>
        $("#menuEspecialidade").addClass("active");
    </script>
}
